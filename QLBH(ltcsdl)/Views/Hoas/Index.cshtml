@model IEnumerable<QLBH_ltcsdl_.Models.Hoa>
@using QLBH_ltcsdl_.Models

<div style="border: 1px solid groove; text-align: center;">
    <h2>DANH SÁCH SẢN PHẨM</h2>
</div>


<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheLoai.TenLoaiHoa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenHoa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.Image("../../" + item.HinhAnh, "", "40", "50")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheLoai.TenLoaiHoa)
        </td>
        <td>
            <a class="btn btn-info" href="@Url.Action("Edit", "Hoas", new { id = item.MaHoa })">
                Sửa
            </a>
            <a href="@Url.Action("Delete", new { id = item.MaHoa })"
               onclick="return confirm('Hệ thống cho biết đối tượng này sẽ được xóa !!!')" class="btn btn-danger">Xóa</a>
        </td>
    </tr>
}

</table>
