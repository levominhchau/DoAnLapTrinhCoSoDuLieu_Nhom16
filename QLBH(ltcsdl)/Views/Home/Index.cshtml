<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3 col-xs-3" style="border: 1px solid groove; text-align: center; background-color: azure;">
            <h3>
                @Html.DisplayFor(x=>item.TenHoa)
            </h3>
            @Html.Image("../" + item.HinhAnh, "", "70", "100")<br/>
            <br/>
            <a class="btn btn-info" href="@Url.Action("Details", "Hoas", new { id = item.MaHoa })">
                Chi tiết sản phẩm
                <br/>
            </a>
        </div>
    }
</div>
<div>
    Trang @(Model.PageCount < Model.PageNumber?0:Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
        page,
        currentFilter = ViewBag.CurrentFilter
    }
    ))
</div>
